<%= form_with(model: blog, class: "needs-validation", novalidate: true) do |form| %>
  <% if blog.errors.any? %>
    <div class="alert alert-danger">
      <h4 class="alert-heading"><%= pluralize(blog.errors.count, "error") %> prohibited this blog from being saved:</h4>
      <ul class="mb-0">
        <% blog.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="mb-3">
    <%= form.label :image, class: "form-label" %>
    <%= form.file_field :image, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= form.label :title, class: "form-label" %>
    <%= form.text_field :title, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= form.label :content, class: "form-label" %>
    <%= form.text_area :content, class: "form-control", rows: 5 %>
  </div>


  <div class="mb-3">
    <%= form.submit class: "btn btn-primary" %>
  </div>
<% end %>